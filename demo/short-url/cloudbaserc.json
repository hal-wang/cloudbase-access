{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "$schema": "https://framework-1258016615.tcloudbaseapp.com/schema/latest.json",
  "functionRoot": "./functions",
  "framework": {
    "name": "short-url",
    "hooks": {
      "preDeploy": {
        "type": "execCommand",
        "commands": [
          "npm install -g typescript",
          "cd short-url-api && npm install --prefer-offline --no-audit --progress=false && npm run build"
        ]
      }
    },
    "plugins": {
      "function": {
        "use": "@cloudbase/framework-plugin-function",
        "inputs": {
          "functionRootPath": "functions",
          "functions": [
            {
              "name": "v1",
              "envVariables": {
                "shortUrl": "{{env.SHORT_URL}}"
              }
            }
          ],
          "servicePaths": {
            "v1": "/"
          }
        }
      },
      "web": {
        "use": "@cloudbase/framework-plugin-website",
        "inputs": {
          "installCommand": "cd short-url-web && npm install --prefer-offline --no-audit --progress=false",
          "buildCommand": "cd short-url-web && npm run build",
          "outputPath": "short-url-web/dist",
          "servicePath": "/w1"
        }
      },
      "db": {
        "use": "@cloudbase/framework-plugin-database",
        "inputs": {
          "collections": [
            {
              "collectionName": "short-url"
            }
          ]
        }
      }
    }
  }
}
